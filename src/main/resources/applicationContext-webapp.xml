<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- The home of web app config that is shared across dispatchers-->
<beans>	

    <!-- Reads the properties file to override the parameters for DB etc
                 Note: the lazy init -->
    <bean id="propertyOverrideConfigurer" class="org.springframework.beans.factory.config.PropertyOverrideConfigurer" lazy-init="false">
        <property name="location" value="classpath:ncportal.properties"/>
        <property name="ignoreResourceNotFound" value="false"/>
        <property name="ignoreInvalidKeys" value="false"/>
    </bean>
    <!--<context:property-override location="classpath:portal.properties"/>-->
</beans>	